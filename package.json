    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "bullmq": "^3.8.0",
    "debug": "^4.3.4",
    "discord.js": "^14.7.1"
  }
